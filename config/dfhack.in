# DF_HACK options

menu "DFHack"

config DFHACK
	bool
	prompt "Build DFHack"
	default n if DF_V_0_43_05
	default y
	help
	  Select this to build DFHack.

config DFHACK_VERSION
	string
	prompt "Github revision of DFHack"
    default "0.43.03-r1" if DF_V_0_43_03
    default "0.40.24-r5" if DF_V_0_40_24
    default "master"
	depends on DFHACK
	help
	  DFHack revision from https://github.com/DFHack/dfhack.

config TWBT
	bool
	default y
	depends on DFHACK

config TWBT_VERSION
	string
	prompt "Github revision of TWBT"
    default "v5.65"
	depends on TWBT
	help
	  TWBT revision from https://github.com/mifki/df-twbt

endmenu
